<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--标题栏-->
    <include layout="@layout/item_title_bar"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp">
            <ImageView
                android:id="@+id/issue_head_pic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_head">
            </ImageView>
            <TextView
                android:id="@+id/issue_head_name"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:text="用户1"
                android:layout_toRightOf="@+id/issue_head_pic"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textColor="@android:color/black">
            </TextView>

            <Button
                android:id="@+id/issue_anonymous_bt"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:text="匿名发送"
                android:textSize="15sp"
                android:layout_marginRight="10dp">
            </Button>
        </RelativeLayout>
        <EditText
            android:id="@+id/issue_et"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="5dp"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:hint="分享你的有趣事"
            android:textColorHint="@color/hint"
            android:gravity="left|top"
            android:layout_marginTop="5dp"
            android:background="@android:color/white">
        </EditText>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/issue_pic_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:overScrollMode="never"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/issue_dongtai_bt"
                android:layout_width="72dp"
                android:layout_height="32dp"
                android:background="@color/issueBg"
                android:text="@string/issueBt"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp">
            </Button>
        </RelativeLayout>
    </LinearLayout>


    
</LinearLayout>